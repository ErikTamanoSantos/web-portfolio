---
interface Props {
	title: string;
	desc: string;
}

const { title, desc } = Astro.props;

import { ViewTransitions } from 'astro:transitions';
---
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<meta name="description" content={desc} />
	<meta name="theme-color" content="#332E2F" />
	<title>Erik Tama√±o | Junior Web Developer Portfolio</title>
	<ViewTransitions />
</head>
<body>
	<slot/>
</body>
</html>
<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	@layer base {
		@font-face {
			font-family: 'NeutralFace';
			src: url('/fonts/NeutralFace.otf') format('opentype');
		}
	}
</style>
